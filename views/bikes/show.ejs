<%include ../partials/header %>
<div class="ui text main container segment">
    <div class="ui segment">
      
            <h1 class="ui header"><%=bike.name%></h1>
            <img src="<%=bike.image%>" alt="" class="ui fluid image">
            <p class="ui text">model -<%=bike.model%></p>
            <p><em>shared by - <strong><%=bike.author.username%></strong></em></p>
            <em><%=bike.created.toDateString()%></em>
            <%if(currentUser && bike.author.id.equals(currentUser._id)) {%>
            <a href="/bikes/<%=bike._id%>/edit" class="ui small yellow button">edit bike</a>
            <form action="/bikes/<%=bike._id%>?_method=delete" method="post">
                <button class="ui small red button">delete bike</button>
            </form>
            <%}%>
           

            <div class="ui segment">
                <a href="/bikes/<%=bike._id%>/comments/new" class="ui green button">leave comment</a>

                <div class="ui comments">
                        <% bike.comments.forEach(function(comment){%> 
                        <div class="comment">
                                <div class="content">
                                  <a class="author"><%=comment.author.username%></a>
                                  <div class="metadata">
                                    <div class="date"><%= comment.create.toDateString() %></div>
                                  </div>
                                  <div class="text">
                                    <%=comment.text%>
                                  </div>
                </div>
               
            </div>
            <a href="/bikes/<%=bike._id%>/comments/<%=comment._id%>/edit" class="ui yellow small button">edit comment</a>
            <form action="/bikes/<%=bike._id%>/comments/<%=comment._id%>?_method=delete" method="post">
                <button class="ui red button">delete comment</button>
            </form>
            <%})%>
    </div>
</div>

<%include ../partials/footer %>